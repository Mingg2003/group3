<%= form_with(model: staff) do |form| %>
<% if staff.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(staff.errors.count, "error") %> prohibited this staff from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% staff.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :name, class: label_class %>
          <%= form.text_field :name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :staffid, class: label_class %>
          <%= form.number_field :staffid, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :phone, class: label_class %>
          <%= form.number_field :phone, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :shift_id, class: label_class %>
        <%= form.select :shift_id, options_from_collection_for_select( Shift.all, 'id', 'shift', selected = staff.shift_id), class: label_class %>

      </div>
  <div class="mb-6">
        <%= form.label :performance, class: label_class %>
          <%= form.text_field :performance, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :salary, class: label_class %>
          <%= form.number_field :salary, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :promotion, class: label_class %>
          <%= form.check_box :promotion, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if staff.persisted? %>
<%= link_to "Cancel", staff, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", staffs_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
