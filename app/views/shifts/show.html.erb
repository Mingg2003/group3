<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Shift</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to shifts_path, class: button_class(theme: "transparent") do %>
      All Shifts
      <% end %>
      <%= link_to edit_shift_path(@shift), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Shift:</p>
        <p><%= @shift.shift %></p>
      </li>
  </ul>
</div>
