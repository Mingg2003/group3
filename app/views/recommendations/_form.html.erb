<%= form_with(model: recommendation) do |form| %>
<% if recommendation.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(recommendation.errors.count, "error") %> prohibited this recommendation from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% recommendation.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :product_id, class: label_class %>
        <%= form.select :product_id, options_from_collection_for_select( Product.all, 'id', 'name', selected = recommendation.product_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :productid, class: label_class %>
          <%= form.number_field :productid, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :price, class: label_class %>
          <%= form.number_field :price, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :quantity, class: label_class %>
          <%= form.number_field :quantity, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :sale, class: label_class %>
          <%= form.text_area :sale, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :trending, class: label_class %>
          <%= form.text_area :trending, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if recommendation.persisted? %>
<%= link_to "Cancel", recommendation, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", recommendations_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
