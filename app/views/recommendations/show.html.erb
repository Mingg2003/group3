<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Recommendation</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to recommendations_path, class: button_class(theme: "transparent") do %>
      All Recommendations
      <% end %>
      <%= link_to edit_recommendation_path(@recommendation), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Product:</p>
        <p><%= @recommendation.product.name %></p>
      </li>
      <li>
        <p class="font-semibold">Productid:</p>
        <p><%= @recommendation.productid %></p>
      </li>
      <li>
        <p class="font-semibold">Price:</p>
        <p><%= @recommendation.price %></p>
      </li>
      <li>
        <p class="font-semibold">Quantity:</p>
        <p><%= @recommendation.quantity %></p>
      </li>
      <li>
        <p class="font-semibold">Sale:</p>
        <p><%= @recommendation.sale %></p>
      </li>
      <li>
        <p class="font-semibold">Trending:</p>
        <p><%= @recommendation.trending %></p>
      </li>
  </ul>
</div>
