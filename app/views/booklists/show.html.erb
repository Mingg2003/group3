<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Booklist</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to booklists_path, class: button_class(theme: "transparent") do %>
      All Booklists
      <% end %>
      <%= link_to edit_booklist_path(@booklist), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Tilte:</p>
        <p><%= @booklist.tilte %></p>
      </li>
      <li>
        <p class="font-semibold">Author:</p>
        <p><%= @booklist.author %></p>
      </li>
      <li>
        <p class="font-semibold">Publisher:</p>
        <p><%= @booklist.publisher %></p>
      </li>
      <li>
        <p class="font-semibold">Year:</p>
        <p><%= @booklist.year %></p>
      </li>
      <li>
        <p class="font-semibold">Available:</p>
        <p><%= @booklist.available %></p>
      </li>
      <li>
        <p class="font-semibold">Type:</p>
        <p><%= @booklist.type.name %></p>
      </li>
      <li>
        <p class="font-semibold">Bookid:</p>
        <p><%= @booklist.bookid %></p>
      </li>
  </ul>
</div>
